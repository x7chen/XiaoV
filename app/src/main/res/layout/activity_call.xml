<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/black">

    <com.tencent.ilivesdk.view.AVRootView
        android:id="@+id/av_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:focusable="false"
        android:id="@+id/rl_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_call_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="New Call"
            android:textColor="@color/white"
            android:textSize="20pt"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="@string/tip_close_camera"
                android:textColor="@color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="@string/tip_switch_camera"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="@string/tip_close_mic"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="@string/tip_set_headset"
                android:textColor="@color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="@string/tip_set_beauty"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="@string/invite"
                android:textColor="@color/white" />

            <Button

                android:id="@+id/btn_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="@string/log"
                android:textColor="@color/white" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fadingEdge="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/assist_red" />
        </ScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">
            <ImageButton
                android:id="@+id/btn_switch_camera"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:src="@mipmap/recycle65"
                android:tint="@color/yellow1"
                android:background="@color/transparent"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/btn_end"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="100dp"
                android:background="@color/transparent"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:src="@mipmap/call44"
                android:tint="@color/yellow1" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:src="@mipmap/photo189"
                android:tint="@color/yellow1"
                android:background="@color/transparent"
                android:layout_marginRight="30dp"
                android:layout_marginTop="180dp"
                android:layout_alignParentRight="true"
                android:onClick="onClick"/>

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:src="@mipmap/sound32"
                android:tint="@color/yellow1"
                android:background="@color/transparent"
                android:layout_marginRight="30dp"
                android:layout_marginTop="260dp"
                android:layout_alignParentRight="true"
                android:onClick="onClick"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:src="@mipmap/user148"
                android:tint="@color/yellow1"
                android:background="@color/transparent"
                android:layout_marginRight="120dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_beauty"
                android:onClick="onClick"/>
            <com.kyleduo.switchbutton.SwitchButton
                android:visibility="invisible"
                android:id="@+id/sb_sw_video"
                style="@style/SwitchButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="200dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/yellow1"
                android:textSize="16sp"
                app:kswTextOff="视频通话"
                app:kswTextOn="ON"
                app:kswThumbHeight="40dp"
                app:kswThumbWidth="40dp"
                app:kswTintColor="@color/yellow1" />
            <Button
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wlog"
                android:text="写log"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_beauty_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <SeekBar
            android:id="@+id/sb_beauty_progress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <Button
            android:id="@+id/btn_beauty_setting_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="提交"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>
