<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/discovery_view">
            </WebView>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="48dp"
                app:srcCompat="@android:drawable/ic_menu_share" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lqr.optionitemview.OptionItemView
            style="@style/OptionItem"
            android:layout_marginTop="@dimen/option_item_margin_top"
            android:background="@drawable/selector_common_item"
            app:left_image_margin_left="@dimen/option_item_margin_left"
            app:left_image_margin_right="@dimen/option_item_margin_right"
            app:left_src="@mipmap/ic_friend_circle"
            app:left_text="@string/photo"
            app:left_text_color="@color/black0"
            app:left_text_size="16sp"/>


        <com.lqr.optionitemview.OptionItemView
            android:visibility="gone"
            android:id="@+id/oivScan"
            style="@style/OptionItem"
            android:layout_marginTop="@dimen/option_item_margin_top"
            android:background="@drawable/selector_common_item"
            app:left_image_margin_left="@dimen/option_item_margin_left"
            app:left_image_margin_right="@dimen/option_item_margin_right"
            app:left_src="@mipmap/ic_scan_blue"
            app:left_text="@string/scan"
            app:left_text_color="@color/black0"
            app:left_text_size="16sp"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                style="@style/Line"
                android:layout_marginLeft="@dimen/option_item_margin_left"
                android:layout_marginRight="@dimen/option_item_margin_right"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.lqr.optionitemview.OptionItemView
            android:visibility="gone"
            style="@style/OptionItem"
            android:background="@drawable/selector_common_item"
            app:left_image_margin_left="@dimen/option_item_margin_left"
            app:left_image_margin_right="@dimen/option_item_margin_right"
            app:left_src="@mipmap/ic_shake_blue"
            app:left_text="@string/shake"
            app:left_text_color="@color/black0"
            app:left_text_size="16sp"/>

        <com.lqr.optionitemview.OptionItemView
            android:visibility="gone"
            android:id="@+id/oivNearby"
            style="@style/OptionItem"
            android:layout_marginTop="@dimen/option_item_margin_top"
            android:background="@drawable/selector_common_item"
            app:left_image_margin_left="@dimen/option_item_margin_left"
            app:left_image_margin_right="@dimen/option_item_margin_right"
            app:left_src="@mipmap/ic_around_blue"
            app:left_text="@string/people_nearby"
            app:left_text_color="@color/black0"
            app:left_text_size="16sp"/>


    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoFrameLayout>
