<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bond_device_view"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="@string/add_device"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btAddDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:src="@mipmap/ic_cheat_add" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/video_call_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/timg"

                android:visibility="invisible">

                <ImageButton
                    android:id="@+id/btMakeCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:src="@mipmap/device_echo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bond_device_name"
                    android:layout_below="@+id/btMakeCall"
                    android:layout_centerHorizontal="true"
                    android:text="@string/app_name" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:visibility="gone"
                    android:id="@+id/sb_start_video"
                    style="@style/SwitchButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:kswTextOff="视频通话"
                    app:kswTextOn="ON"
                    app:kswThumbHeight="40dp"
                    app:kswThumbWidth="40dp"
                    app:kswTintColor="#0E5AA4"
                    android:layout_alignParentRight="true" />


            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoFrameLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</com.zhy.autolayout.AutoRelativeLayout>



</com.zhy.autolayout.AutoLinearLayout>