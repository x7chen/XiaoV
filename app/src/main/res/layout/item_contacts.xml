<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_call_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:background="@drawable/shape_video_bg">

    <ImageButton
        android:id="@+id/btMakeCall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@mipmap/video47"
        android:tint="@color/yellow0" />

    <TextView
        android:id="@+id/bond_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btMakeCall"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name" />
</com.zhy.autolayout.AutoRelativeLayout>

